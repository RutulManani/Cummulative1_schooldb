@model Cummulative1_schooldb.Models.Teacher
@{
    ViewBag.Title = "Delete Confirm";
}

<a class="navlink" href="/TeacherPage/Show/@Model.TeacherId">Back to Teacher</a>

<div id="containerdelete">
    <h2>Confirm Deletion</h2>
    <p class="warning">Are you sure you want to delete this teacher? This action cannot be undone.</p>

    <table>
        <tr>
            <th>ID</th>
            <td>@Model.TeacherId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.TeacherFname @Model.TeacherLname</td>
        </tr>
        <tr>
            <th>Employee Number</th>
            <td>@Model.EmployeeNumber</td>
        </tr>
        <tr>
            <th>Hire Date</th>
            <td>@Model.HireDate.ToString("yyyy-MM-dd")</td>
        </tr>
        <tr>
            <th>Salary</th>
            <td>@Model.Salary.ToString("C")</td>
        </tr>
    </table>

    <div class="button-container">
        @using (Html.BeginForm("Delete", "TeacherPage", new { id = Model.TeacherId }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <a href="/TeacherPage/Show/@Model.TeacherId" class="cancel-button">Cancel</a>
            <input type="submit" value="Confirm Delete" class="delete-button" />
        }
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f9f9f9;
    }

    #containerdelete {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #D1140E;
    }

    .warning {
        color: #D1140E;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
    }

    .delete-button {
        background-color: #D1140E;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        .delete-button:hover {
            background-color: #c9302c;
        }

    .cancel-button {
        background-color: #5bc0de;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
    }

        .cancel-button:hover {
            background-color: #46b8da;
        }

    .navlink {
        display: inline-block;
        margin-bottom: 20px;
        color: #0066cc;
        text-decoration: none;
        font-weight: bold;
    }

        .navlink:hover {
            text-decoration: underline;
        }
</style>
